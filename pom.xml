        <repository>
            <id>maven-hngs-releases</id>
            <name>maven-hngs-releases</name>
            <url>http://10.43.1.77:8081/repository/maven-hngs-releases/</url>
        </repository>
        <snapshotRepository>
            <id>maven-hngs-snapshots</id>
            <name>maven-hngs-snapshots</name>
